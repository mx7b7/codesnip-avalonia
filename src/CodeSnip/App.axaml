<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CodeSnip.App"
             xmlns:local="using:CodeSnip"
             RequestedThemeVariant="Default">
	<!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.DataTemplates>
		<local:ViewLocator/>
	</Application.DataTemplates>

	<Application.Styles>
		<SimpleTheme />
		<!-- AvaloniaEdit styles (required!) -->
		<StyleInclude Source="avares://AvaloniaEdit/Themes/Simple/AvaloniaEdit.xaml" />
		<StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Simple/Simple.xaml" />
		<StyleInclude Source="/Themes/StyleOverrides.axaml"/>
		
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Resources/Icons.axaml"/>
				<ResourceInclude Source="/ControlsEx/Window/Window.axaml"/>
				<ResourceInclude Source="/Themes/ExpanderStyles.axaml"/>
				<ResourceInclude Source="/Themes/ColorOverrides.axaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>