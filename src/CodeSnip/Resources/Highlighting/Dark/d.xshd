		<!-- keywords that start with @ -> @property, @safe... -->
		<Rule color="Keywords">@[\w_][\w\d_]*</Rule>
		<!-- function names -->
		<Rule color="MethodName">[\d\w_]+(?=(\s*\())</Rule>
		<!-- .. => = + - * / % ! & | : ^ ~ < > -->
		<Rule color="Punctuation">(\.\.|\=\>|[=+\-*/%!&amp;|:^~&lt;&gt;])+</Rule>
		<!-- std.string -->
		<Rule color="Type">(?&lt;!\bstd\.)\bstring\b</Rule>
	</RuleSet>
