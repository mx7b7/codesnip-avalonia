<?xml version="1.0" encoding="utf-8"?>
<SyntaxDefinition name="D" extensions=".d" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
	<!-- syntax definition for D by mx7b7 -->
	<!-- Monokai theme -->
	<Color name="Comment" foreground="#FF75715E" />
	<Color name="String" foreground="#FFE6DB74" />
	<Color name="Character" foreground="#FFFD971F" />
	<Color name="Number" foreground="#FFAE81FF" />
	<Color name="Punctuation" foreground="#FFF92672" />
	<Color name="Keywords" foreground="#FFF92672" />
	<Color name="Type" foreground="#FF66D9EF" />
	<Color name="MethodName" foreground="#FFA6E22E" />
	<Color name="Preprocessor" foreground="#FF9B9B9B" />

	<Property name="Extension" value="d" />

	<RuleSet ignoreCase="false">
		<Span color="Comment" begin="//" end="$" />
		<Span color="Comment" multiline="true" begin="/\*" end="\*/" />
		<!-- nested comments -->
		<Span color="Comment" multiline="true" begin="/\+" end="\+/" />
		<Span color="String" begin="`" end="`" />
		<Span color="String" begin="r&quot;" end="&quot;" />
		<Span color="String" begin="q{" end="}" />
		<Span color="String">
			<Begin>"</Begin>
			<End>"</End>
			<RuleSet>
				<Span begin="\\" end="." />
			</RuleSet>
		</Span>
		<Span color="Character">
			<Begin>'</Begin>
			<End>'</End>
			<RuleSet>
				<Span begin="\\" end="." />
			</RuleSet>
		</Span>
		<!-- 
			Example matches:
			- 0x1A3FUL       (hexadecimal with unsigned long suffix)
			- 0b1010_1101u   (binary with unsigned suffix and underscores)
			- 123_456.789e+10f (decimal floating-point with exponent and float suffix)
			- 42L            (decimal long integer)
			- 3.14159        (decimal floating-point number)
		  -->
		<Rule color="Number">
			\b(
			0[xX][0-9a-fA-F_]+((u|U)?(l|L)?|(l|L)?(u|U)?)? |           # hex
			0[bB][01_]+((u|U)?(l|L)?|(l|L)?(u|U)?)? |                  # binary
			\d+(_\d+)*(\.\d+(_\d+)*)?([eE][+-]?\d+(_\d+)*)?            # decimal
			(
			(f|F)(i)?|L(i)?|i| (u|U)?(l|L)?|(l|L)?(u|U)?             # sufix
			)?
			)\b
		</Rule>
