<?xml version="1.0"?>
<SyntaxDefinition name="PowerShell" extensions=".ps1;.psm1;.psd1" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
	<Color name="Comment"           foreground="#FF57A64A" exampleText="// comment" />
	<Color name="String"            foreground="#FFD69D85" exampleText="string text = &quot;Hello, World!&quot;"/>
	<Color name="Char"              foreground="#FFD69D85" exampleText="char linefeed = '\n';"/>
	<Color name="Punctuation"       foreground="White" exampleText="a(b.c);" />
	<Color name="NumberLiteral"     foreground="#FFb5cea8" exampleText="3.1415f"/>
	<Color name="Keywords"          foreground="#FF00A0FF" exampleText="if (a)"/>
	<Color name="Variable"          foreground="#FFd8a0df" exampleText="$param = 1"/>
	<Color name="ExceptionKeywords" foreground="#FFd8a0df" />
	<Color name="GotoKeywords"      foreground="#FFd8a0df" />
	<Color name="ReferenceTypes"    foreground="#FF559CD6" />
	<Color name="Command"           foreground="#FF559CD6" />
	<Color name="Operators"         foreground="#FF559CD6" exampleText="-eq"/>

	<Property name="Extension" value="ps1" />

	<RuleSet ignoreCase="true">
		<Span color="Comment">
			<Begin>\#</Begin>
		</Span>

		<Span color="Comment" multiline="true">
			<Begin>&lt;\#</Begin>
			<End>\#&gt;</End>
		</Span>

		<Span color="String">
			<Begin>"</Begin>
			<End>"</End>
			<RuleSet>
				<!-- span for escape sequences -->
				<Span begin="\\" end="."/>
			</RuleSet>
		</Span>

		<Span color="Char">
			<Begin>'</Begin>
			<End>'</End>
			<RuleSet>
				<!-- span for escape sequences -->
				<Span begin="\\" end="."/>
			</RuleSet>
		</Span>

		<Span color="String" multiline="true">
			<Begin color="String">@"</Begin>
			<End>"@</End>
			<RuleSet>
				<!-- span for escape sequences -->
				<Span begin='""' end=""/>
			</RuleSet>
		</Span>

		<Keywords color="Keywords">
			<Word>begin</Word>
			<Word>class</Word>
			<Word>data</Word>
			<Word>define</Word>
			<Word>dp</Word>
			<Word>dynamicparam</Word>
			<Word>else</Word>
			<Word>elseif</Word>
			<Word>end</Word>
			<Word>exit</Word>
			<Word>filter</Word>
			<Word>for</Word>
			<Word>foreach</Word>
			<Word>from</Word>
			<Word>function</Word>
			<Word>if</Word>
			<Word>in</Word>
			<Word>param</Word>
			<Word>process</Word>
			<Word>switch</Word>
			<Word>until</Word>
			<Word>using</Word>
			<Word>var</Word>
			<Word>while</Word>
		</Keywords>

		<Keywords color="ExceptionKeywords">
			<Word>catch</Word>
			<Word>finally</Word>
			<Word>throw</Word>
			<Word>trap</Word>
			<Word>try</Word>
		</Keywords>

		<Keywords color="GotoKeywords">
			<Word>break</Word>
			<Word>continue</Word>
			<Word>return</Word>
		</Keywords>

		<Keywords color="ReferenceTypes">
			<Word>class</Word>
		</Keywords>

		<Keywords color="Operators">
			<Word>-and</Word>
			<Word>-as</Word>
			<Word>-band</Word>
			<Word>-bor</Word>
			<Word>-contains</Word>
			<Word>-creplace</Word>
			<Word>-eq</Word>
			<Word>-ge</Word>
			<Word>-gt</Word>
			<Word>-ireplace</Word>
			<Word>-is</Word>
			<Word>-isnot</Word>
			<Word>-le</Word>
			<Word>-like</Word>
			<Word>-lt</Word>
			<Word>-match</Word>
			<Word>-ne</Word>
			<Word>-not</Word>
			<Word>-notcontains</Word>
			<Word>-notlike</Word>
			<Word>-notmatch</Word>
			<Word>-or</Word>
			<Word>-replace</Word>
		</Keywords>

		<Rule color="Variable">
			\$[\d\w_]+
		</Rule>

		<Rule color="Command">
			[\w]+-[\w]+
		</Rule>

		<!-- Digits -->
		<Rule color="NumberLiteral">
			\b0[xX][0-9a-fA-F]+  # hex number
			|
			(	\b\d+(\.[0-9]+)?   #number with optional floating point
			|	\.[0-9]+           #or just starting with floating point
			)
			([eE][+-]?[0-9]+)? # optional exponent
		</Rule>

		<Rule color="Punctuation">
			[?,.;()\[\]{}+\-/%*&lt;&gt;^+~!|&amp;]+
		</Rule>
	</RuleSet>
</SyntaxDefinition>
