		<!--  @import ... -->
		<Rule color="Preprocessor">@[\w_][\w\d_]*</Rule>
		<!-- function names -->
		<Rule color="MethodName">[\d\w_]+(?=(\s*\())</Rule>

		<Rule color="Punctuation">(\.\.|\=\>|[?=+\-*/%!&amp;|:^~&lt;&gt;])+</Rule>
	</RuleSet>
</SyntaxDefinition>