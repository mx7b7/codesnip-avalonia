<?xml version="1.0" encoding="utf-8"?>
<SyntaxDefinition name="Zig" extensions=".zig" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
	<!-- syntax definition for Zig by mx7b7 -->
	<!-- vscode Light Modern-->
	<Color name="Comment" foreground="#FF008000" />
	<Color name="String" foreground="#FFA31515" />
	<Color name="Character" foreground="#FFA31515" />
	<Color name="Number" foreground="#FF098658" />
	<Color name="Punctuation" foreground="#FF1E82FF" />
	<Color name="Keywords" foreground="#FFAF00DB" />
	<Color name="Type" foreground="#FF0000FF" />
	<Color name="MethodName" foreground="#FF795E26" />
	<Color name="Preprocessor" foreground="#FF795E26" />

	<Property name="Extension" value="zig" />

	<RuleSet ignoreCase="false">
		<Span color="Comment" begin="//" end="$" />
		<Span color="Comment" multiline="true" begin="/\*" end="\*/" />

		<Span color="String" multiline="true">
			<Begin>\\</Begin>
			<End>;</End>
			<RuleSet>
				<Span begin="\\$" end="\\$" />
			</RuleSet>
		</Span>

		<Span color="String" multiline="true">
			<Begin>c\\</Begin>
			<End>;</End>
			<RuleSet>
				<Span begin="c\\$" end="c\\$" />
			</RuleSet>
		</Span>

		<Span color="String">
			<Begin>"</Begin>
			<End>"</End>
			<RuleSet>
				<Span begin="\\" end="." />
			</RuleSet>
		</Span>
		<Span color="Character">
			<Begin>'</Begin>
			<End>'</End>
			<RuleSet>
				<Span begin="\\" end="." />
			</RuleSet>
		</Span>
		<Rule color="Number">\b0x[0-9a-fA-F_]+(\.[0-9a-fA-F_]+)?([pP][+-]?[0-9_]+)?\b</Rule>
		<Rule color="Number">\b[0-9_]+(\.[0-9_]+)?([eE][+-]?[0-9_]+)?\b</Rule>
		<Rule color="Number">\b0o[0-7_]+\b</Rule>
		<Rule color="Number">\b0b[01_]+\b</Rule>
		<Keywords color="Keywords">
			<Word>align</Word>
			<Word>allowzero</Word>
			<Word>and</Word>
			<Word>asm</Word>
